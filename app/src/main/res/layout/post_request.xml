<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <Spinner
        android:id="@+id/fertiliserMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/ferti"
        android:gravity="fill_horizontal"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonRequest"
        android:layout_alignStart="@+id/buttonRequest"></Spinner>

    <EditText
        android:id="@+id/amountInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Required Amount"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/fertiliserMenu"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Kilogram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:inputType="number"
        android:layout_below="@+id/amountInput"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Request"
        android:id="@+id/buttonRequest"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp" />

    <EditText
        android:hint="Expected Date Of Arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/expectedDate"
        android:layout_above="@+id/buttonRequest"
        android:layout_marginBottom="58dp"
        android:layout_alignRight="@+id/amountInput"
        android:layout_alignEnd="@+id/amountInput" />


</RelativeLayout>
